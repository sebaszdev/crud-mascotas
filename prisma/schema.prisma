generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model breeds {
  id        Int       @id @default(autoincrement())
  nombre    String
  especie   String
  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())
  pets      pets[]
}

model owners {
  id        Int       @id @default(autoincrement())
  nombre    String
  email     String    @unique(map: "sqlite_autoindex_owners_1")
  telefono  String?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())
  pets      pets[]
}

model pets {
  id              Int       @id @default(autoincrement())
  nombre          String
  fechaNacimiento DateTime?
  sexo            String?
  peso            Float?
  ownerId         Int
  breedId         Int
  createdAt       DateTime? @default(now())
  updatedAt       DateTime? @default(now())
  breeds          breeds    @relation(fields: [breedId], references: [id], onUpdate: NoAction)
  owners          owners    @relation(fields: [ownerId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}
